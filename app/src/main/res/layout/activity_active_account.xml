<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActiveAccountActivity">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="We have sent you a verification email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:text="Thank you for joining with us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="end"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/skipActivation"
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goToEmail"
            app:cornerRadius="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/purple_500"
            android:text="Go to email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>